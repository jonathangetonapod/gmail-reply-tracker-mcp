# Google OAuth Configuration (YOUR shared OAuth app)
# Get these from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# OAuth Redirect URI
# Local: http://localhost:8080/auth/callback
# Railway: https://yourapp.railway.app/auth/callback
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/callback

# OAuth Scopes (comma-separated)
GOOGLE_OAUTH_SCOPES=https://www.googleapis.com/auth/gmail.modify,https://www.googleapis.com/auth/calendar,https://www.googleapis.com/auth/userinfo.email

# Token Encryption Key
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=your-generated-key-here

# Database Path
DATABASE_PATH=./data/users.db

# Server Configuration
PORT=8080
FLASK_ENV=development
SESSION_SECRET=your-random-secret-here

# Railway Auto-Sets These (leave empty for local development)
RAILWAY_PUBLIC_DOMAIN=
RAILWAY_ENVIRONMENT=
