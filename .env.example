# Gmail API OAuth Credentials
# Path to your credentials.json file downloaded from Google Cloud Console
GMAIL_CREDENTIALS_PATH=./credentials/credentials.json

# Path where OAuth token will be stored (auto-created during setup)
GMAIL_TOKEN_PATH=./credentials/token.json

# OAuth Configuration
# Scope for read-only Gmail access
GMAIL_OAUTH_SCOPES=https://www.googleapis.com/auth/gmail.readonly

# Server Configuration
MCP_SERVER_NAME=gmail-reply-tracker
LOG_LEVEL=INFO

# Optional: Rate Limiting
# Maximum Gmail API requests per minute (default: 60)
GMAIL_API_MAX_REQUESTS_PER_MINUTE=60
