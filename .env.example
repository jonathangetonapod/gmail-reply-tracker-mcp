# Google OAuth Configuration (YOUR shared OAuth app)
# Get these from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# OAuth Redirect URI
# Local: http://localhost:8080/auth/callback
# Railway: https://yourapp.railway.app/auth/callback
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/callback

# OAuth Scopes (comma-separated)
# IMPORTANT: These scopes must match what's configured in Google Cloud Console OAuth consent screen
GOOGLE_OAUTH_SCOPES=https://www.googleapis.com/auth/gmail.modify,https://www.googleapis.com/auth/calendar,https://www.googleapis.com/auth/userinfo.email

# OAuth Library Configuration
# Fixes Google OAuth adding 'openid' scope causing validation errors
OAUTHLIB_RELAX_TOKEN_SCOPE=1

# Token Encryption Key
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=your-generated-key-here

# Database Path
DATABASE_PATH=./data/users.db

# Server Configuration
PORT=8080
FLASK_ENV=development
SESSION_SECRET=your-random-secret-here

# Railway Auto-Sets These (leave empty for local development)
RAILWAY_PUBLIC_DOMAIN=
RAILWAY_ENVIRONMENT=

# Fathom AI API Key (Optional - for meeting transcript tools)
# Get your API key from: https://fathom.video Settings > API
FATHOM_API_KEY=your-fathom-api-key-here

# Lead Management Configuration (Optional - for Instantly & Bison integrations)
# Google Sheets URL containing client configurations
LEAD_SHEETS_URL=https://docs.google.com/spreadsheets/d/1CNejGg-egkp28ItSRfW7F_CkBXgYevjzstJ1QlrAyAY/edit
LEAD_SHEETS_GID_INSTANTLY=928115249
LEAD_SHEETS_GID_BISON=1631680229
